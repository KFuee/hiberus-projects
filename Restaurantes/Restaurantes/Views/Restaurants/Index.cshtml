@model IEnumerable<Restaurantes.Models.Restaurant>

@{
    ViewBag.Title = "Index";
}

<h2>Restaurantes disponibles</h2>

<p>
    @Html.ActionLink("Crear nuevo restaurante", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.RestaurantId }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.RestaurantId }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.RestaurantId }) |
                @Html.ActionLink("Ver valoraciones", "Index", "RestaurantReviews", new { id = item.RestaurantId }, null)
            </td>
        </tr>
    }

</table>
