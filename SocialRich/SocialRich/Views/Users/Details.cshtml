@model SocialRich.Models.User

@{
    ViewBag.Title = "Details";
}

<style>
    dd {
        margin-bottom: 10px;
    }
</style>

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FavouriteSocialNetwork)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FavouriteSocialNetwork.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SocialNetworks)
        </dt>

        <dd>
            <ul style="padding: 0px; list-style: none">
                @foreach (var item in Model.SocialNetworks)
                {
                    <li>@item.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.UserId }) |
